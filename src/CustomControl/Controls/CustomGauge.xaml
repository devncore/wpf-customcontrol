<UserControl x:Class="CustomControl.Controls.CustomGauge"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomControl.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid MaxWidth="300" MaxHeight="300">
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Right" VerticalAlignment="Top">
                <TextBox Width="120" Margin="0 0 10 0" x:Name="tbx"/>
                <Button HorizontalAlignment="Right" VerticalAlignment="Top" Content="테스트" x:Name="btn"/>
            </StackPanel>
            <Canvas x:Name="canvas" Width="300" Height="300" MaxWidth="300" MaxHeight="300"></Canvas>
        </StackPanel>
    </Grid>
</UserControl>
